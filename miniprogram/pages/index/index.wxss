/* pages/index/index.wxss */

.Hcontainer {
  margin: 100rpx 0rpx 50rpx;
  padding: 0 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}

.opButton {
  color: white;
  background-color: #0f0;
  border-radius: 10px;
}

.list {
  margin-top: 40rpx;
  width: 100%;
  padding: 0 40rpx;
  border: 1px solid rgba(0, 0, 0, 0.1);
  border-left: none;
  border-right: none;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  box-sizing: border-box;
}

.list-title {
  margin: 20rpx;
  color: black;
  font-size: 28px;
  font-style: bold;
  display: block;
}

.list-item {
  width: 100%;
  padding: 10rpx;
  font-size: 16px;
  color: #007aff;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  box-sizing: border-box;
}

.list-text {
  color: red;
  font-size: 12px;
  display: block;
}

.image-container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.image-container image {
  max-width: 30%;
  max-height: 10vh;
  margin-top: 20rpx;
  border: 1px solid #e0e0e0;
}
