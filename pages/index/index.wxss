/**index.wxss**/
page{
    /* 设置文本居中对齐 */
    text-align: center; 
}

.btnLayout{
    /* 设置btn布局 */
    display: flex;
    flex-direction: row;
    /* 空间平均 */
    justify-content: space-around;
}

button{
    /* btn样式 */
    width: 45%;
    margin: 5px;
}

.storageInfo{
    /* 设置text组件 */
    margin: 20rpx;
    padding: 20rpx;
    background-color: #f8f8f8;
    text-align: left;
    border: 1px solid seagreen;
}