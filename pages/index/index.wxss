canvas{
    width: 100%;
    height: 360px;
    background-color: 1px solid springgreen;
}

.toolStyle01{
    /* 底部画面 */
    position: absolute;
    bottom: 10px;
    display: flex;
    flex-direction: row;
}

.toolStyle02{
    display: flex;
    flex-direction: column;
}

.toolStyle{
    width: 60px;
    height: 60px;
    border: 1px solid #ccc;
    /*边框*/
    border-radius: 50%; 
    text-align: center;
    line-height: 60px;
    background: green;
    color: #FFF;
    margin: 10px 20px;

}

.changeBc{
    background: #f00;
}