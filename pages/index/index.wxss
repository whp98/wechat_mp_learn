.txtLayout {
    /*text组件布局*/
    display: flex;
    flex-direction: column;
    margin: 20rpx 0rpx;
    border: 1px solid burlywood;
    padding: 10rpx;
  }
  
  text {
    margin: 10rpx 0;
  }
  
  .btnLayout {
    /* 设置button组件的布局 */
    display: flex;
    flex-direction: row;
    justify-content: space-around; /* 设置主轴方向组件的排列方式 */
  }
  
  input {
    margin: 20rpx 0;
    border-bottom: 1px solid blue;
  }
  