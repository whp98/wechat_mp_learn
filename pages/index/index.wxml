<!--图片组件的高级使用-->

<view class='box'>
    <view class="title">视频组件和发射弹幕</view>
    <view class="videoLayout">
        <video id='myVideo' src="https://boot-video.xuexi.cn/video/1004/p/badd35c197c6c2dcdb7f1044fa2c25b8-65eaeb216e73459a997f771992d10d32-2.mp4" danmu-list='{{danmulist}}' enable-danmu danmu-btn controls></video>
    </view>
    <view>
        <view class="view">弹幕内容</view>
        <input bindblur="inputBlur" type="text" placeholder="在此输入弹幕内容"></input>
        <button type='primary' bindtap="sendDanmu">发送弹幕</button>
    </view>
</view>