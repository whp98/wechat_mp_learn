/* pages/index/layout/Flex_layout.wxss */
.style-box-m1{
    width: 80%; 
    height: 100px;
    background-color: yellow; /*背景色*/
    border: 3px dashed #f00; /*边框样式*/
    padding: 20px; /*内边距*/
    margin: 10px; /*外边距*/
}

.style-box-m2{
    width: 80%; 
    height: 100px;
    border: 5px solid rgb(50,200,100); /*边框样式*/
    padding-top: 20px; /*内上边距*/
    margin-bottom: 20px; /*外下边距*/
}

.style-box-m3{
    width: 80%; 
    height: 120px;
    border: 3px dotted rgba(0,0,255,0.3); /*边框样式*/
    padding-left: 20px; /*内左边距*/
    margin:0 10px; /*外上下0 左右边距20px*/
}